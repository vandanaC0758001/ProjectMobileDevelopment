<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".tabs5frag1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-23dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:src="@drawable/annhotel"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="The Anndore House"
                android:textColor="#000000"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"

                android:layout_gravity="center">

                <View
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#000000"
                    >
                </View>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="20dp"

                    android:textColor="#000000"
                    android:fontFamily="cursive"
                    android:text="✧">

                </TextView>

                <View
                    android:layout_marginLeft="10dp"
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:background="#000000"
                    android:layout_gravity="center"
                    >
                </View>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:text="Toronto’s Instagram-friendly, 113-room retreat is a stylish home-away-from-home for hip downtown-focused visitors and a local gathering spot for the nearby condo crowd. It's cosmopolitan chic, from the sumptuous, sexy main floor to the quirky, loft-style suites. Conveniently located on a quiet street, just one block away from the crossroads of the city’s subway system at Yonge and Bloor. The Anndore House is a five-minute walk from Bloor Street’s luxury shopping, the upscale Yorkville area and the LGBTQ+ neighbourhood. The Royal Ontario Museum is a 10-minute walk east. Downtown shopping is 10 minutes away by subway, and the Financial District is a 15-minute taxi ride."></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"

                android:layout_gravity="center">

                <View
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#000000"
                    >
                </View>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="20dp"

                    android:textColor="#000000"
                    android:fontFamily="cursive"
                    android:text="✧">

                </TextView>

                <View
                    android:layout_marginLeft="10dp"
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:background="#000000"
                    android:layout_gravity="center"
                    >
                </View>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:text="Amenities:"
                android:textAlignment="center"></TextView>
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="1. Internet \n ✓ Free Wifi \n ✓ Wifi in Public Areas"></TextView>
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="2. Policies \n ✓ Smoke-Free Property \n ✓ Credit Cards \n ✓ Cash"></TextView>

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="3. Activities \n ✓ Indoor and outdoor pool \n ✓ Scuba \n ✓ Game Room"></TextView>


        </LinearLayout>
    </ScrollView>
</FrameLayout>