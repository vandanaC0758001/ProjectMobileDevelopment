<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".tabs4frag1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-23dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:src="@drawable/hilton"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hilton Hotel (Starting at 50$/day)"
                android:textColor="#000000"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"

                android:layout_gravity="center">

                <View
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#000000"
                    >
                </View>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="20dp"

                    android:textColor="#000000"
                    android:fontFamily="cursive"
                    android:text="✧">

                </TextView>

                <View
                    android:layout_marginLeft="10dp"
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:background="#000000"
                    android:layout_gravity="center"
                    >
                </View>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:text="As the most recognized name in the industry, travelers all over the world have been saying Take me to the Hilton for almost a century. And because of our innovative approach to products, amenities and service, Hilton continues to be synonymous with hotel across the globe. Hilton Hotels and Resorts remains the stylish, forward thinking global leader of hospitality – and we help make traveling easier with our smart design, innovative restaurant concepts, authentic hospitality and commitment to the global community."></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"

                android:layout_gravity="center">

                <View
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#000000"
                    >
                </View>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="20dp"

                    android:textColor="#000000"
                    android:fontFamily="cursive"
                    android:text="✧">

                </TextView>

                <View
                    android:layout_marginLeft="10dp"
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:background="#000000"
                    android:layout_gravity="center"
                    >
                </View>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:text="Amenities:"
                android:textAlignment="center"></TextView>
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="1. Internet \n ✓ Free Wifi \n ✓ Wifi in Public Areas"></TextView>
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="2. Policies \n ✓ Smoke-Free Property \n ✓ Credit Cards \n ✓ Cash"></TextView>

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="3. Activities \n ✓ Indoor and outdoor pool \n ✓ Scuba \n ✓ Game Room"></TextView>


        </LinearLayout>
    </ScrollView>
</FrameLayout>