<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".tabsfragment1">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-23dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:src="@drawable/deltahotels"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Delta Hotels By Marriott"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content"

            android:layout_gravity="center">

            <View
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="#000000"
                >
            </View>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="20dp"

                android:textColor="#000000"
                android:fontFamily="cursive"
                android:text="✧">

            </TextView>

            <View
                android:layout_marginLeft="10dp"
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:background="#000000"
                android:layout_gravity="center"
                >
            </View>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:text="Set near Highway 401, this casual hotel is 2.9 km from Scarborough Town Centre, and 4.6 km from Thomson Memorial Park.

Modern rooms are equipped with air-conditioning, flat-screen TVs and coffeemakers, plus free WiFi. Suites add a separate living area, minifridges and microwaves.

Amenities include an on-site Japanese restaurant, a grill and a casual pub, plus an atrium with an indoor saltwater pool, waterslide, hot tub and sauna. There's also a spa and a fitness centre, as well as meeting spaces."></TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content"

            android:layout_gravity="center">

            <View
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="#000000"
                >
            </View>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="20dp"

                android:textColor="#000000"
                android:fontFamily="cursive"
                android:text="✧">

            </TextView>

            <View
                android:layout_marginLeft="10dp"
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:background="#000000"
                android:layout_gravity="center"
                >
            </View>


        </LinearLayout>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:textColor="#000000"
             android:text="Amenities:"
             android:textAlignment="center"></TextView>
          <TextView
              android:layout_marginTop="10dp"
              android:textColor="#000000"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:textAlignment="center"
              android:text="1. Internet \n ✓ Free Wifi \n ✓ Wifi in Public Areas"></TextView>
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="2. Policies \n ✓ Smoke-Free Property \n ✓ Credit Cards \n ✓ Cash"></TextView>

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="3. Activities \n ✓ Tennis \n ✓ Scuba \n ✓ Game Room"></TextView>


    </LinearLayout>
</ScrollView>
</FrameLayout>